<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B2EAF1"
    tools:context=".MainActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbarSize="30dp"
            android:background="#B2EAF1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="italic"
            android:text="India Travel"
            android:textColor="@color/black"/>


    </Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:id="@+id/kutch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/kutch3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kutch"
                        android:textColor="@color/black"
                        android:textSize="35dp"
                        android:textStyle="italic" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/goa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/goa">




                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goa"
                    android:textSize="35dp"
                    android:textStyle="italic"
                    android:textColor="@color/black"/>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ladakh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ladakh3">


                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ladakh"
                    android:textSize="35dp"
                    android:textStyle="italic"
                    android:textColor="#000000"/>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/kerala"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kerala21">
                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kerala"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="italic"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/kedarnath"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/kedarnath33">


                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kedarnath"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="italic" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/jaisalmer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/jaisalmer">


                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jaisalmer"
                    android:textColor="#161A33"
                    android:textSize="35dp"
                    android:textStyle="italic" />

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/manali"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/manali6">

                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manali"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:textStyle="italic" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/Ujjain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ujjain">

                    </ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ujjain"
                        android:textColor="@color/black"
                        android:textSize="35dp"
                        android:textStyle="italic" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

        </LinearLayout>




    </ScrollView>
</LinearLayout>